root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.[ch]]
indent_size = 2
indent_style = space
max_line_length = 80

[*.{css, yml}]
indent_size = 2
indent_style = space

[*.{js,py}]
indent_size = 4
indent_style = space
max_line_length = 80

[*.json]
indent_size = 4
indent_style = space

[*.{css,ui,xml,xml.in,yml}]
indent_size = 2
indent_style = space

[meson.build]
indent_size = 2
indent_style = space
