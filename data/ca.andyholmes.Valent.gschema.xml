<schemalist gettext-domain="valent">
  <schema id="ca.andyholmes.Valent" path="/ca/andyholmes/valent/">
    <key name="name" type="s">
      <default>""</default>
      <summary>Name</summary>
      <description>The display name for the local device.</description>
    </key>
    <key name="device-addresses" type="as">
      <default>[]</default>
      <summary>Device Addresses</summary>
      <description>Add devices by hostname or IP address</description>
    </key>
  </schema>
  <schema id="ca.andyholmes.Valent.Plugin">
    <key name="enabled" type="b">
      <default>true</default>
      <summary>Plugin State</summary>
      <description>Whether the plugin is enabled or not.</description>
    </key>
  </schema>
</schemalist>

