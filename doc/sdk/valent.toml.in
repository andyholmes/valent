[library]
version = "@version@"
browse_url = "https://github.com/andyholmes/valent/"
repository_url = "https://github.com/andyholmes/valent.git"
website_url = "https://github.com/andyholmes/valent/"
authors = "Andy Holmes"
logo_url = "logo.svg"
license = "GPL-3.0-or-later"
description = "Connect, control and sync devices"
dependencies = [
  "GObject-2.0",
  "Gtk-4.0",
  "Json-1.0",
  "Peas-1.0",
  "EBookContacts-1.2",
]
devhelp = true
search_index = true


  [dependencies."GObject-2.0"]
  name = "GObject"
  description = "The base type system library"
  docs_url = "https://developer.gnome.org/gobject/stable"

  [dependencies."Gtk-4.0"]
  name = "GTK"
  description = "The GTK toolkit"
  docs_url = "https://docs.gtk.org/gtk4/"

  [dependencies."Peas-1.0"]
  name = "Peas"
  description = "A GObject-based plugin engine"
  docs_url = "https://developer.gnome.org/libpeas/stable"

  [dependencies."Json-1.0"]
  name = "JSON"
  description = "A library for reading and parsing JSON"
  docs_url = "https://developer.gnome.org/json-glib/stable"

  [dependencies."EBookContacts-1.2"]
  name = "EBookContacts"
  description = "The contact library for Evolution Data Server"
  docs_url = "https://developer.gnome.org/eds/stable/"

[theme]
name = "basic"
show_index_summary = true
show_class_hierarchy = true

[source-location]
base_url = "https://github.com/andyholmes/valent/blob/main/"

[extra]
# The same order will be used when generating the index
content_files = [
  "protocol.md",
]
content_images = [
  "images/logo.svg",
]
urlmap_file = "urlmap.js"

