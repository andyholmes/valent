<schemalist gettext-domain="valent">
  <schema id="ca.andyholmes.Valent.Plugin.battery">
    <key name="share-state" type="b">
      <default>true</default>
    </key>
    <key name="full-notification" type="b">
      <default>false</default>
    </key>
    <key name="full-notification-level" type="d">
      <default>100.0</default>
      <range min="0.0" max="100.0"/>
    </key>
    <key name="low-notification" type="b">
      <default>true</default>
    </key>
    <key name="low-notification-level" type="d">
      <default>20.0</default>
      <range min="0.0" max="100.0"/>
    </key>
  </schema>
</schemalist>
