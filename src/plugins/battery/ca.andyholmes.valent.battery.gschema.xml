<schemalist gettext-domain="valent">
  <schema id="ca.andyholmes.valent.battery">
    <key name="share-state" type="b">
      <default>true</default>
      <summary>Share State</summary>
      <description>Send updates of the battery status</description>
    </key>
    <key name="charge-rate" type="(uui)">
      <default>(54, 0, -1)</default>
    </key>
    <key name="discharge-rate" type="(uui)">
      <default>(864, 0, -1)</default>
    </key>
    <key name="full-notification" type="b">
      <default>false</default>
      <summary>Full Battery Notification</summary>
      <description>Show a notification when the battery is full</description>
    </key>
    <key name="full-notification-level" type="i">
      <default>100</default>
      <summary>Full Level</summary>
      <description>The level to consider the battery full</description>
    </key>
    <key name="low-notification" type="b">
      <default>true</default>
      <summary>Low Battery Notification</summary>
      <description>Show a notification when the battery is low</description>
    </key>
    <key name="low-notification-level" type="i">
      <default>15</default>
      <summary>Low Level</summary>
      <description>The level to consider the battery low</description>
    </key>
  </schema>
</schemalist>
