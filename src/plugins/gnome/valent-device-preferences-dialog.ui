<interface domain="valent">
  <template class="ValentDevicePreferencesDialog" parent="AdwPreferencesDialog">
    <child>
      <object class="ValentPreferencesStatusPage" id="status_page">
        <binding name="context">
          <lookup name="context" type="ValentDevice">
            <lookup name="device">ValentDevicePreferencesDialog</lookup>
          </lookup>
        </binding>
      </object>
    </child>
    <child>
      <object class="ValentPreferencesSyncPage" id="sync_page">
        <binding name="context">
          <lookup name="context" type="ValentDevice">
            <lookup name="device">ValentDevicePreferencesDialog</lookup>
          </lookup>
        </binding>
      </object>
    </child>
    <child>
      <object class="ValentPreferencesOtherPage" id="other_page">
        <binding name="context">
          <lookup name="context" type="ValentDevice">
            <lookup name="device">ValentDevicePreferencesDialog</lookup>
          </lookup>
        </binding>
      </object>
    </child>

    <!-- Plugins -->
    <child>
      <object class="AdwPreferencesPage" id="plugin_page">
        <property name="name">plugins</property>
        <property name="title" translatable="yes">Plugins</property>
        <property name="icon-name">valent-plugins-symbolic</property>
        <property name="vexpand">1</property>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="yes">Plugins</property>
            <child>
              <object class="GtkListBox" id="plugin_list">
                <property name="hexpand">1</property>
                <property name="selection-mode">none</property>
                <child type="placeholder">
                  <object class="GtkLabel">
                    <property name="height-request">56</property>
                    <property name="label" translatable="yes">No Plugins</property>
                    <style>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
                <accessibility>
                  <property name="label" translatable="yes">Plugins</property>
                </accessibility>
                <style>
                  <class name="boxed-list"/>
                  <class name="boxed-list-placeholder"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
