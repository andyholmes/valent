<schemalist gettext-domain="valent">
  <schema id="ca.andyholmes.valent.sftp">
    <key name="auto-mount" type="b">
      <default>false</default>
    </key>
    <key name="local-allow" type="b">
      <default>false</default>
      <summary>Local Access</summary>
      <description>Expose the local SSH service.</description>
    </key>
    <key name="local-port" type="u">
      <default>22</default>
      <summary>Local Port</summary>
      <description>Local SSH port.</description>
    </key>
  </schema>
</schemalist>
