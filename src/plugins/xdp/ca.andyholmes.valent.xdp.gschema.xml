<schemalist gettext-domain="valent">
  <schema id="ca.andyholmes.valent.xdp" path="/ca/andyholmes/valent/xdp/">
    <key name="autostart" type="b">
      <default>true</default>
      <summary>Autostart</summary>
      <description>Start the service at login.</description>
    </key>
    <key name="xdp-session-timeout" type="u">
      <default>15</default>
      <description>Session timeout in seconds, 0 for no timeout.</description>
    </key>
  </schema>
</schemalist>
