{
    "$schema": "http://json-schema.org/schema#",
    "required": [
        "id",
        "type",
        "body"
    ],
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "default": 0
        },
        "type": {
            "type": "string",
            "enum": ["kdeconnect.lock.request"]
        },
        "body": {
            "type": "object",
            "default": {
                "requestLocked": {
                    "type": "boolean",
                    "default": true
                },
                "setLocked": {
                    "type": "boolean",
                    "default": true
                }
            }
        }
    }
}
