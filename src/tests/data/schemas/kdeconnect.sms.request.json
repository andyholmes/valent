{
    "$schema": "http://json-schema.org/schema#",
    "required": [
        "id",
        "type",
        "body"
    ],
    "type": "object",
    "properties": {
        "id": {
            "type": "integer"
        },
        "type": {
            "type": "string",
            "enum": ["kdeconnect.sms.request"]
        },
        "body": {
            "type": "object",
            "properties": {
                "addresses": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "address": {
                                "type": "string"
                            }
                        }
                    }
                },
                "attachments": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "fileName": {
                                "type": "string"
                            },
                            "base64EncodedFile": {
                                "type": "string"
                            },
                            "mimeType": {
                                "type": "string"
                            }
                        }
                    }
                },
                "messageBody": {
                    "type": "string"
                },
                "subID": {
                    "type": "integer"
                },
                "version": {
                    "type": "integer",
                    "enum": [2]
                }
            },
            "required": [
                "addresses",
                "messageBody"
            ]
        }
    }
}

